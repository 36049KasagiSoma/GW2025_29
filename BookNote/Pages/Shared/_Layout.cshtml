<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookCommunityApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookCommunityApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">BookCommunityApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- オーバーレイ -->
    <div class="overlay" onclick="toggleDrawer()"></div>
    <!-- ナビゲーションドロワー -->
    <div class="drawer">
        <div class="drawer-content">
            <a href="/Reviews" class="drawer-item">レビュー一覧</a>
            <div class="drawer-item">あなたにオススメ</div>
            <a href="/WriteReview" class="drawer-item">レビューを書く</a>
        </div>
    </div>
    <!-- ハンバーガーメニュー -->
    <div class="hamburger" onclick="toggleDrawer()">
        <span></span>
        <span></span>
        <span></span>
    </div>
    <!-- アップバー -->
    <div class="appbar appbar-fixed">
        <a href="/" class="logo-link logo-link-fixed">
            <img src="image/Logo_big.png" alt="BookCommunity" class="logo logo-fixed">
        </a>
        @if (!string.IsNullOrEmpty(Context.Session.GetString("AccessToken"))) {
            <!-- ログイン済みの場合 -->
            <div class="auth-section" style="margin-left: auto; display: flex; align-items: center; gap: 15px;">
                <span class="username-display">
                    @(Context.Session.GetString("Name") ?? Context.Session.GetString("Username") ?? "ユーザー")
                </span>
                <button class="auth-button auth-button-logout" onclick="location.href='/Logout'">ログアウト</button>
            </div>
        } else {
            <!-- 未ログインの場合 -->
            <button class="auth-button" onclick="location.href='/Login'" style="margin-left: auto;">ログイン・新規登録</button>
        }
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BookCommunityApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>