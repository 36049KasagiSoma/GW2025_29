@page "{reviewId:int}"
@model BookNote.Pages.ReviewDetailsModel
@{
    ViewData["Title"] = Model.ReviewTitle ?? "レビュー詳細";
}
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BookNote - @ViewData["Title"]</title>
    <link type="text/css" rel="stylesheet" href="~/css/site.css">
    <link type="text/css" rel="stylesheet" href="~/css/review-details.css">
</head>
<body class="review-detail-page">
    <div class="main-content">
        @if (Model.Review != null && !Model.IsDraft) {
            <div class="reviews-grid">
                <div class="review-card-large" data-isbn="@Model.Isbn">
                    <div class="book-cover-large">
                        <span>NoImage</span>
                    </div>
                    <div class="review-content-large">
                        <div class="review-title">@Model.ReviewTitle</div>
                        <div class="book-title">@Model.BookTitle</div>
                        @if (Model.Evaluation.HasValue) {
                            <div class="rating">
                                評価: @Model.Evaluation / 5
                            </div>
                        }
                        @if (Model.IsSpoilers) {
                            <div class="spoiler-warning">
                                <img src="/image/warning.png" class="spoiler-warning-icon" alt="警告" />ネタバレ注意
                            </div>

                            <!-- ネタバレ確認オーバーレイ -->
                            <div class="spoiler-overlay" id="spoiler-overlay">
                                <div class="spoiler-overlay-content">
                                    <div class="spoiler-overlay-icon">
                                        <img src="/image/warning.png" class="spoiler-overlay-warning-icon" alt="警告" />
                                    </div>
                                    <div class="spoiler-overlay-title">このレビューにはネタバレが含まれています</div>
                                    <div class="spoiler-overlay-desc">
                                        結末や重要な展開が含まれている可能性があります。<br>
                                        本作をまだ読んでいない方はご注意ください。
                                    </div>
                                    <div class="spoiler-overlay-buttons">
                                        <button class="spoiler-btn-cancel" onclick="history.back()">戻る</button>
                                        <button class="spoiler-btn-confirm" id="spoiler-confirm-btn">
                                            閲覧する
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- ネタバレ本文（初期は非表示） -->
                            <div class="review-text spoiler-content" id="review-body" style="display:none;">
                                @Html.Raw(Model.ReviewHtml)
                            </div>
                        } else {
                            <div class="review-text">
                                @Html.Raw(Model.ReviewHtml)
                            </div>
                        }
                        @{
                            var currentPublicId = Scripts.Login.AccountDataGetter.IsAuthenticated()
                            ? await Scripts.Login.AccountDataGetter.GetDbUserPublicIdAsync()
                            : null;
                            var isOwner = currentPublicId != null && currentPublicId == Model.UserPublicId;
                        }
                        <button class="like-button @(Scripts.Login.AccountDataGetter.IsAuthenticated() && !isOwner ? "" : "disabled")"
                                data-review-id="@Model.ReviewId"
                                data-owner="@isOwner.ToString().ToLower()"
                                type="button"
                                @(Scripts.Login.AccountDataGetter.IsAuthenticated() && !isOwner ? "" : "disabled")>
                            <span class="heart-icon"></span>
                            <span class="like-count">0</span>
                        </button>
                        @if (!Scripts.Login.AccountDataGetter.IsAuthenticated()) {
                            <script>
                                window.isUserAuthenticated = false;
                                window.reviewOwnerPublicId = '@Model.UserPublicId';
                            </script>
                        } else {
                            <script>
                                window.isUserAuthenticated = true;
                                window.currentUserPublicId = '@currentPublicId';
                                window.reviewOwnerPublicId = '@Model.UserPublicId';
                            </script>
                        }
                        <div class="reviewer-info">
                            <div class="reviewer-icon" data-public-id="@Model.UserPublicId"></div>
                            <a href="/user/UserProfile/@Model.UserPublicId" class="reviewer-name">@Model.UserName</a>
                            <span class="post-time">@Model.PostingTimeDisplay</span>
                        </div>

                        @if (isOwner) {
                            <div class="owner-actions">
                                <a href="/review_create/WriteReview?reviewId=@Model.ReviewId"
                                   class="btn-edit">
                                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
                                    </svg>
                                    本文を編集
                                </a>
                                <button type="button" class="btn-delete" id="delete-review-btn"
                                        data-review-id="@Model.ReviewId">
                                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="3 6 5 6 21 6" />
                                        <path d="M19 6l-1 14a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2L5 6" />
                                        <path d="M10 11v6M14 11v6" />
                                        <path d="M9 6V4a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v2" />
                                    </svg>
                                    削除
                                </button>
                            </div>
                        }
                    </div>
                </div>

                <!-- 削除確認ダイアログ -->
                @if (isOwner) {
                    <div class="delete-modal-overlay" id="delete-modal-overlay" style="display:none;">
                        <div class="delete-modal">
                            <div class="delete-modal-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10" />
                                    <line x1="12" y1="8" x2="12" y2="12" />
                                    <line x1="12" y1="16" x2="12.01" y2="16" />
                                </svg>
                            </div>
                            <h3 class="delete-modal-title">レビューを削除しますか？</h3>
                            <p class="delete-modal-desc">
                                この操作は取り消せません。<br>
                                レビュー「@Model.ReviewTitle」を完全に削除します。
                            </p>
                            <div class="delete-modal-actions">
                                <button type="button" class="delete-modal-cancel" id="delete-cancel-btn">キャンセル</button>
                                <form method="post" action="/review_create/WriteReview?handler=Delete&reviewId=@Model.ReviewId" id="delete-form">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="delete-modal-confirm">削除する</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }

                <!-- コメントセクション -->
                <div class="comments-section" id="comments-container">
                    <div class="comments-header">
                        <span>コメント (0)</span>
                    </div>

                    @if (Scripts.Login.AccountDataGetter.IsAuthenticated()) {
                        <div class="comment-form">
                            <textarea id="comment-input"
                              placeholder="コメントを入力してください（1000文字まで）"
                              maxlength="1000"
                              rows="3"></textarea>
                            <div class="comment-form-footer">
                                <span class="char-count">0 / 1000</span>
                                <button id="submit-comment" class="submit-comment-btn">投稿</button>
                            </div>
                        </div>
                    } else {
                        <div class="login-prompt">
                            コメントを投稿するには<a href="/Login">ログイン</a>してください
                        </div>
                    }

                    <div class="comments-list" id="comments-list">
                        <!-- コメントがここに動的に追加されます -->
                        <!-- JS側でコメント生成時、レビュー投稿者のコメントには
                             class="comment-item review-author-comment" と
                             <span class="author-badge">投稿者</span> を付与してください -->
                    </div>

                    <a href="#" id="view-all-comments" class="view-all-link" style="display: none;">
                        すべてのコメントを見る →
                    </a>
                </div>
            </div>
        } else {
            <p class="empty-message">レビューが見つかりませんでした。</p>
        }
    </div>
    <script type="text/javascript" src="~/js/site.js"></script>
    <script type="text/javascript" src="~/js/load_image.js"></script>
    <script type="text/javascript" src="~/js/review_details.js"></script>
    <script>
        // 削除ダイアログ制御
        const deleteBtn = document.getElementById('delete-review-btn');
        const deleteOverlay = document.getElementById('delete-modal-overlay');
        const deleteCancelBtn = document.getElementById('delete-cancel-btn');

        if (deleteBtn && deleteOverlay) {
            deleteBtn.addEventListener('click', function () {
                deleteOverlay.style.display = 'flex';
                // フォーカストラップ
                setTimeout(() => deleteCancelBtn && deleteCancelBtn.focus(), 50);
            });
            deleteCancelBtn.addEventListener('click', function () {
                deleteOverlay.style.display = 'none';
            });
            // オーバーレイ背景クリックで閉じる
            deleteOverlay.addEventListener('click', function (e) {
                if (e.target === deleteOverlay) {
                    deleteOverlay.style.display = 'none';
                }
            });
            // Escキーで閉じる
            document.addEventListener('keydown', function (e) {
                if (e.key === 'Escape' && deleteOverlay.style.display === 'flex') {
                    deleteOverlay.style.display = 'none';
                }
            });
        }
    </script>
    <script>
        // 文字数カウント
        const commentInput = document.getElementById('comment-input');
        const charCount = document.querySelector('.char-count');
        if (commentInput && charCount) {
            commentInput.addEventListener('input', function() {
                charCount.textContent = `${this.value.length} / 1000`;
            });
        }

        // ネタバレ確認ボタン
        const spoilerConfirmBtn = document.getElementById('spoiler-confirm-btn');
        if (spoilerConfirmBtn) {
            spoilerConfirmBtn.addEventListener('click', function () {
                const overlay = document.getElementById('spoiler-overlay');
                const reviewBody = document.getElementById('review-body');

                // オーバーレイをフェードアウト
                overlay.classList.add('fade-out');
                overlay.addEventListener('animationend', function () {
                    overlay.style.display = 'none';
                }, { once: true });

                // 本文をフェードイン表示
                reviewBody.style.display = 'block';
                reviewBody.classList.add('fade-in');
            });
        }
    </script>
</body>
</html>
