@page
@model SelectTypeModel
@{
    ViewData["Title"] = "レビュー作成";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BookNote - レビュー作成</title>
    <link type="text/css" rel="stylesheet" href="~/css/site.css">
    <link type="text/css" rel="stylesheet" href="~/css/review-create.css">
</head>
<body class="review-create-page">
    <form method="post" style="display:none">
        @Html.AntiForgeryToken()
    </form>
    <div class="main-content">
        <h1 class="page-title">レビューを作成</h1>

        <!-- 新規作成ボタン -->
        <div class="new-review-section">
            <div class="option-card new-review" onclick="window.location.href='/review_create/WriteReview'">
                <div class="option-icon">
                    <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 5v14M5 12h14" />
                    </svg>
                </div>
                <h2 class="option-title">新規作成</h2>
                <p class="option-description">新しいレビューを最初から作成します</p>
            </div>
        </div>

        <!-- 下書き一覧 -->
        <div class="drafts-section">
            <h2 class="section-title">下書き (@Model.DraftCount)</h2>

            @if (Model.Drafts != null && Model.Drafts.Any()) {
                <div class="drafts-list">
                    @foreach (var draft in Model.Drafts) {
                        <div class="draft-item" onclick="window.location.href='/review_create/WriteReview?ReviewId=@draft.ReviewId'">
                            <div class="draft-info">
                                <div class="draft-title">@(string.IsNullOrEmpty(draft.Title) ? "無題の下書き" : draft.Title)</div>
                                @if (draft.Book != null) {
                                    <div class="draft-book">@draft.Book.Title</div>
                                }
                                @if (!string.IsNullOrEmpty(draft.Review)) {
                                    <div class="draft-preview">@Scripts.StaticEvent.TrimReview(draft.Review, 50, draft.IsSpoilers == 1)</div>
                                }
                            </div>
                            <div class="draft-meta">
                                <button class="delete-draft-btn" onclick="event.stopPropagation(); deleteDraft(@draft.ReviewId)">削除</button>
                            </div>
                        </div>
                    }
                </div>
            } else {
                <p class="empty-message">保存された下書きがありません</p>
            }
        </div>
    </div>

    <script type="text/javascript" src="~/js/site.js"></script>
    <script type="text/javascript" src="~/js/review-create.js"></script>
</body>
</html>